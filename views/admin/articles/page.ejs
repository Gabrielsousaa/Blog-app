<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <%- include('../../partials/favicon.ejs'); -%>
        <title>Home</title>
        <%- include('../../partials/homenavbar.ejs'); -%>
</head>

<body>
    <div class="container">
        <% result.articles.rows.forEach(article=>{ %>
            <br>
            <div class="card">
                <div class="card-header">
                    <h2>
                        <%= article.title %>
                    </h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">
                        Ler Artigo
                    </a>
                </div>
            </div>
            <br>
            <% }) %>
                <div class="row">
                    <div class="col col-12">
                        <% if(result.page> 2) { %>
                            <a style="float: left" href="/articles/page/<%= result.page -1 %>">
                                <<< Prev</a>
                            <% } else if(result.page==2){ %>
                                <a style="float: left" href="/">
                                 <<< Prev</a>
                                 <% } %>

                            <% if(result.next) { %>
                                <a style="float:right"href="/articles/page/<%= result.page + 1 %>">
                                    Proxima pagina >>></a>
                            <% } %>
                    </div>
                </div>
                <hr>
    </div>

</body>

<%- include('../../partials/footer.ejs'); -%>